<Window x:Class="HipHipParquet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hip Hip Parquet" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/app.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OnOpenFileClick">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‚" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="RecentFilesMenuItem" Header="_Recent Files">
                    <MenuItem Header="(No recent files)" IsEnabled="False"/>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="SaveMenuItem" Header="_Save" Click="OnSaveClick" IsEnabled="False">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="SaveAsMenuItem" Header="Save _As..." Click="OnSaveAsClick" IsEnabled="False">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Toggle _Schema Pane" Click="OnToggleSchemaPaneClick" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="Toggle _Filter Row" Click="OnToggleFilterRowClick" IsCheckable="True" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="_View Mode"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Click="OnCopyClick">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Copy as _CSV" Click="OnCopyAsCsvClick"/>
                <MenuItem Header="Copy as _TSV" Click="OnCopyAsTsvClick"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid x:Name="MainContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SchemaPaneColumn" Width="250" MinWidth="200"/>
                <ColumnDefinition x:Name="SchemaSplitterColumn" Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Schema Pane -->
            <Border x:Name="SchemaPane" Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer>
                    <StackPanel x:Name="SchemaPanel" Margin="12">
                        <TextBlock Text="Schema" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                        <TextBlock x:Name="SchemaStatusText" 
                                  Text="No file loaded" 
                                  Foreground="Gray"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter x:Name="SchemaSplitter" Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         Background="#E0E0E0"/>

            <!-- Data Grid Area -->
            <Grid Grid.Column="2">
                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center" Foreground="Gray"/>
                    <TextBlock Text="Open a Parquet file to get started" 
                              FontSize="18" 
                              Foreground="Gray"
                              Margin="0,8,0,0"
                              HorizontalAlignment="Center"/>
                    <Button Content="Browse Files" 
                           Background="#512BD4"
                           Foreground="White"
                           Margin="0,16,0,0"
                           Padding="16,8"
                           Click="OnOpenFileClick"/>
                </StackPanel>
                
                <!-- Data Grid -->
                <Grid x:Name="DataGridContainer" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Panel -->
                    <ScrollViewer x:Name="SearchPanelContainer"
                                 Grid.Row="0" 
                                 HorizontalScrollBarVisibility="Hidden" 
                                 VerticalScrollBarVisibility="Disabled"
                                 Margin="12,12,12,0">
                        <Border Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel x:Name="SearchPanel" 
                                       Orientation="Horizontal" 
                                       Margin="0"/>
                        </Border>
                    </ScrollViewer>
                    
                    <!-- Data Grid -->
                    <DataGrid x:Name="DataGrid" 
                             Grid.Row="1"
                             AutoGenerateColumns="False"
                             HeadersVisibility="All"
                             GridLinesVisibility="All"
                             AlternatingRowBackground="#F9F9F9"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="False"
                             SelectionMode="Single"
                             SelectionUnit="CellOrRowHeader"
                             Margin="12,5,12,12"
                             ScrollViewer.ScrollChanged="OnDataGridScrollChanged"
                             CellEditEnding="OnCellEditEnding"
                             EnableRowVirtualization="True"
                             EnableColumnVirtualization="True"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy" Click="OnContextCopyClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“‹" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy with Headers" Click="OnContextCopyWithHeadersClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“‹" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Copy Row(s)" Click="OnContextCopyRowsClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="âž¡ï¸" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy Row(s) with Headers" Click="OnContextCopyRowsWithHeadersClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="âž¡ï¸" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Copy Column(s)" Click="OnContextCopyColumnsClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="â¬‡ï¸" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy Column(s) with Headers" Click="OnContextCopyColumnsWithHeadersClick">
                                    <MenuItem.Icon>
                                        <TextBlock Text="â¬‡ï¸" FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ” Global Search:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="GlobalSearchBox" 
                            Width="200" 
                            TextChanged="OnGlobalSearchTextChanged"
                            VerticalContentAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>